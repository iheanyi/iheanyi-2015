<div class="projects-header-image banner-header">

</div>

<div class="projects-area">
  <div class="container-full">
    <div class="row">

        <div class="projects-page-heading">
          <span class="page-heading heading-room">projects</span>

          <p class="page-paragraph-text">I enjoy building  beautiful, user-friendly applications, whether for myself or for others.</p>
        </div>
    </div>

    <div class="row">
      <div class="latest-projects">
        <div class="container-full">
          <div class="full-width-table project-items">
              <% blog("projects").articles.reverse.each do |article| %>
                <figure class="effect-oscar placeholder-box-projects">
                 <%= image_tag(article.data.cover_photo) %>

                  <figcaption>
                    <h2><%=article.title %></h2>
                    <p><%= article.data.description %></p>

                    <%= link_to "", article, :relative => true %>
<!--                     <a href="<%= article.url %>"></a>
 -->                  </figcaption>
                </figure>

              <% end %>
            </div>

          <div class="reset-disp"></div>
        </div>

        <div class="container">
          <button class="circle-button lg-button reset"><%= link_to 'want to collaborate?', '/contact.html' %></button>
        </div>
      </div>
    </div>
  </div>
</div>